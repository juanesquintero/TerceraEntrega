{{>header}}
<div style="margin-left: 30px; margin-right: 40px" >

    <h4 class="form-group text-center">Inscribirse a un curso</h4>
    <form data-toggle="validator" style="margin-left: 30px; margin-right: 40px" action="/inscritos" method="POST"> 
            <!--Campos del CRUD inscripcion-->
            <div class="form-group row">
                <div class="col-sm-5">
                <input type="number" min="0" name="di" class="form-control input-sm" maxlength="11" placeholder="Documento Identidad" required>
                </div>
                    <div class="col-sm-5">
                        <input type="email" name="email" class="form-control" aria-describedby="emailHelp"  placeholder="Correo Electronico" required>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-5">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" required>
                </div>
                <div class="col-sm-5">
                    <input type="number" name="tel" class="form-control" placeholder="Telefono" required>
                </div>
           </div>

            <div class="form-group row">
            {{{listarCursosDisponibles}}}
            </div>
            <!--Boton para validar campos-->
            <div class="text-center">
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
    </form>
</div>
{{>footer}}
